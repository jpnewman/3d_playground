    "version": "0.2.0",
    "configurations": [
        {
            "name": "Launch",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceRoot}/Debug/HelloWorld",
            "args": [],
            "stopAtEntry": false,
            "cwd": "${workspaceRoot}/Debug",
            "environment": [
                {
                    "name":  "DYLD_LIBRARY_PATH",
                    "value": "/usr/local/share/vulkansdk/macOS/lib"
                },
                {
                    "name":  "VK_ICD_FILENAMES",
                    "value": "/usr/local/share/vulkansdk/macOS/etc/vulkan/icd.d/MoltenVK_icd.json"
                },
                {
                    "name":  "VK_LAYER_PATH",
                    "value": "/usr/local/share/vulkansdk/macOS/etc/vulkan/explicit_layer.d"
                }
            ],
            "externalConsole": false,
            "MIMode": "lldb",
            "preLaunchTask": "build"
        }
    ]
}